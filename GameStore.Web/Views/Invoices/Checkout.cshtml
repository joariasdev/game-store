@model GameStore.Domain.Entities.Invoice

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<h3>Are you sure you want to complete this order?</h3>
<div>
    <h4>Invoice #@Model.Id</h4>
    <hr />
    <dl class="row">
        @* <dt class="col-sm-2"> *@
        @*     @Html.DisplayNameFor(model => model.Id) *@
        @* </dt> *@
        @* <dd class="col-sm-10"> *@
        @*     @Html.DisplayFor(model => model.Id) *@
        @* </dd> *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CalculatedTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>    
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    @await Html.PartialAsync("_InvoiceItemsTableNoControls", Model.InvoiceItems, new ViewDataDictionary(ViewData) { { "InvoiceId", Model.Id } })
    
    <form asp-action="Checkout">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Checkout" class="btn btn-primary" /> |
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
