@model Invoice

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Invoice #@Model.Id</h4>
    <hr />
    <dl class="row">        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CalculatedTotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
@if (Model.Status == "Open") {
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-dark mt-2">Edit</a>
        <a asp-action="Index" class="btn btn-dark mt-2">Back to List</a>
    </div>
} else {
    <div>
        <a asp-action="History" class="btn btn-dark mt-2">Back to List</a>
    </div>
}

@await Html.PartialAsync("_InvoiceItemsTableNoControls", Model.InvoiceItems, new ViewDataDictionary(ViewData) { { "InvoiceId", Model.Id } })
