@model IEnumerable<GameStore.Domain.Entities.Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create Invoice</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>  
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {            
            <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CalculatedTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>  
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-dark">Delete</a>
            </td>
            <td>
                    <a asp-action="Checkout" asp-route-id="@item.Id" class="btn btn-dark">Checkout</a>
            </td>
        </tr>
}
    </tbody>
</table>
